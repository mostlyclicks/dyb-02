<div id='records'>
  <h2><%= t('.inquiry') %></h2>
  <table id='inquiry' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.first_name', :default => t('activerecord.attributes.inquiry.first_name')) %>
          </strong>
        </td>
        <td>
          <%= @inquiry.first_name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.last_name', :default => t('activerecord.attributes.inquiry.last_name')) %>
          </strong>
        </td>
        <td>
          <%= @inquiry.last_name %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.email', :default => t('activerecord.attributes.inquiry.email')) %>
          </strong>
        </td>
        <td>
          <%= @inquiry.email %>
        </td>
      </tr>
      <tr>
        <td>
          <strong>
            <%= t('.phone', :default => t('activerecord.attributes.inquiry.phone')) %>
          </strong>
        </td>
        <td>
          <%= @inquiry.phone %>
        </td>
      </tr>
      <tr>
        <td valign='top'>
          <strong>
            <%= t('.additional_comments', :default => t('activerecord.attributes.inquiry.additional_comments')) %>
          </strong>
        </td>
        <td>
          <p style='margin-top: 0px'>
            <% @inquiry.message.to_s.gsub("\r\n\r\n", "\r\n").split("\r\n").each_with_index do |sentence, index| %>
              <%=raw "</p><p>" unless index == 0 %>
              <%= sentence %>
            <% end %>
          </p>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@inquiry.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
    <%= link_to t('.back_to_all_inquiries'), refinery.inquiries_admin_inquiries_path,
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete_inquiry', :scope => 'refinery.inquiries.admin.inquiries.inquiry'),
                  refinery.inquiries_admin_inquiry_path(@inquiry),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete_inquiry', :scope => 'refinery.inquiries.admin.inquiries.inquiry'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @inquiry.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
